[monitor]
1 = ${env:MONITOR:DisplayPort-0}
2 = ${env:MONITOR:DisplayPort-1}
3 = ${env:MONITOR:DisplayPort-2}
4 = ${env:MONITOR:HDMI-A-0}

[bar/xwindow1]
monitor = ${monitor.1}
inherit = bartype/xwindow

[bar/bspwm1]
monitor = ${monitor.1}
inherit = bartype/bspwm

[bar/leftBorder1]
monitor = ${monitor.1}
inherit = bartype/border1

[bar/date1]
